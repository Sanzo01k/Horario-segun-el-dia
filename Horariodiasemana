		<script>
			function fecha(){
				var hoy = new Date();
				var dia = hoy.getDay();
				document.getElementById(dia).style.borderColor = '#FF0000';
				document.getElementById(dia).style.backgroundColor = '#FFFFFF';
				document.getElementById(dia).style.color = '#FF0000';
			}
		</script>
	</head>
	<body onload="fecha()">
